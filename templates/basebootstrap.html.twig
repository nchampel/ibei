<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Royaume de Conquête
			{% endblock %}
		</title>
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">
		{# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> #}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href={{ asset('css/style.css') }}>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{# <body class="bg-dark text-white font-serif"> #}
	<body class="custom-bg-app font-serif d-flex flex-column">

		<!-- Barre du haut -->
		{# <header class="bg-secondary shadow-sm">
		        <div class="container-fluid px-4 py-3 d-flex justify-content-between align-items-center">
		            <div class="fs-2 fw-bold">⚔️ Royaume de Fer</div>
		            <nav class="d-flex gap-3">
		                <a href="#" class="text-white text-decoration-none">Carte</a>
		                <a href="#" class="text-white text-decoration-none">Alliances</a>
		                <a href="#" class="text-white text-decoration-none">Profil</a>
		            </nav>
		        </div>
		    </header> #}
			<div class="w3-bar w3-black menu-top-height">
            <a href={{ path('app_home')}} class="w3-bar-item w3-button">Ibei</a>
			{# <a href={{ path('app_ranking')}} class="w3-bar-item w3-button">Classement</a> #}
			<div class="w3-right">
				{% if app.user %}
					<span class="w3-bar-item">Joueur :
						{{user.getPseudo()}}</span>
					<a class="w3-bar-item" href={{ path('app_logout') }}>Se déconnecter</a>
				{% else %}
					<a class="w3-bar-item" href={{ path('app_login') }}>Se connecter</a>
					<a class="w3-bar-item" href={{ path('app_register') }}>S'inscrire</a>
				{% endif %}
			</div>
		</div>


		{# <div class="clear-flex"></div> #}
		<div class="d-flex flex-column flex-lg-row row">

			<!-- Menu latéral -->
			{# <aside class="bg-primary p-4 shadow-lg col-12 col-lg-3"> #}
				{% if app.user and app.user.nature %}
					<aside class="p-4 shadow-lg col-2 text-black d-flex flex-column align-items-center justify-content-center custom-bg-{{ user.getNature() }} full-height-sidebar">
                    {# <h2 class="fs-4 text-warning mb-4">📜</h2> #}
					<p class="text-bold">Alignement
						{{ user.getNature() | capitalize }}</p>
                    <p class="text-center">{{ user.getDescription() }}</p>
                    <p class="text-bold">Devise</p>
					<p class="text-center">{{ user.getDevise() }}</p>
					<p id="money"><span class="text-bold">Argent</span>
						{{ user.getMoney() | format_number}}
						€</p>
					<p id="exp"><span class="text-bold">Expérience</span>
						{{ user.getExp() | format_number}}</p>
					<ul
						class="list-unstyled">
						{# <li><a href="#" class="text-white text-decoration-none d-block mb-2">🏰 Royaume</a></li> #}
						 <li>
							<a href="#" class="text-decoration-none d-block mb-2 text-bold">Etape 1</a>
						</li>
						{#<li>
							<a href="#" class="text-decoration-none d-block mb-2">💰 Économie</a>
						</li>
						<li>
							<a href="#" class="text-decoration-none d-block mb-2">⚙️ Améliorations</a>
						</li>
						<li>
							<a href="#" class="text-decoration-none d-block mb-2">🛡️ Armée</a>
						</li>
						<li>
							<a href="#" class="text-decoration-none d-block mb-2">📦 Stock</a>
						</li> #}
					</ul>
				</aside>
			{% endif %}

			<!-- Contenu principal -->
			{# <main class="col-12 col-lg-9 p-4 bg-dark"> #}
			<main class="col-10 pl-4 border-top border-light">
				<div id="about" class="w3-container w3-padding-1 mb-4 text-white">
					<h1 class="w3-center">Ibei</h1>
					<p class="w3-center">Le jeu par navigateur aux multiples gameplays</p>
				</div>
				{% for label, messages in app.flashes %}
					{% set labelBootstrapClass = {
                'success': 'success',
                'error': 'danger',
                'warning': 'warning',
                'info': 'info'
            }[label]|default('secondary') %}
					{% for message in messages %}
						<div class="alert alert-{{ labelBootstrapClass }} text-center">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
				<div class="text-white">
					{% block body %}
						<h1 class="fs-3 fw-bold mb-4 text-warning">Bienvenue, Seigneur des Terres du Nord</h1>

						<!-- Grille des ressources -->
						<div
							class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
							<!-- Bloc de ressources -->
							<div class="col">
								<div class="card bg-secondary text-light">
									<div class="card-body">
										<h3 class="card-title mb-2">💰 Or</h3>
										<p class="card-text fs-4">5320</p>
									</div>
								</div>
							</div>
							<div class="col">
								<div class="card bg-secondary text-light">
									<div class="card-body">
										<h3 class="card-title mb-2">🌾 Nourriture</h3>
										<p class="card-text fs-4">2810</p>
									</div>
								</div>
							</div>
							<div class="col">
								<div class="card bg-secondary text-light">
									<div class="card-body">
										<h3 class="card-title mb-2">🪵 Bois</h3>
										<p class="card-text fs-4">1470</p>
									</div>
								</div>
							</div>
						</div>

						<!-- Exemple d'action -->
						<div class="mt-4">
							<button class="btn btn-warning text-dark py-2 px-4 rounded shadow-sm">
								Collecter les taxes 💰
							</button>
						</div>
					{% endblock %}
				</div>
			</main>
		</div>
		<footer class="custom-footer text-white text-center row">
			<div class="col-2 custom-bg-{{ user.getNature()}}"></div>
			<div class="col-10">Studio Zensaikeunde</div>
		</footer>

		<!-- Scripts JS de Bootstrap -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		{% block script %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<!--	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>  -->

	</body>
</html>
