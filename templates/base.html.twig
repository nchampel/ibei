 <!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Ibei{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
     <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css"> 
    {% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href={{ asset('css/style.css') }}>
			<link rel="stylesheet" href={{ asset('css/app.css') }}>
			<link rel="stylesheet" href={{ asset('css/nature.css') }}>
			<link rel="stylesheet" href={{ asset('css/etape1.css') }}>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
</head>
{# <body class="bg-dark text-white font-serif"> #}
<body class="custom-bg-app font-serif d-flex flex-column">

    <!-- Barre du haut -->
    {# <header class="bg-secondary shadow-sm">
        <div class="container-fluid px-4 py-3 d-flex justify-content-between align-items-center">
            <div class="fs-2 fw-bold">‚öîÔ∏è Royaume de Fer</div>
            <nav class="d-flex gap-3">
                <a href="#" class="text-white text-decoration-none">Carte</a>
                <a href="#" class="text-white text-decoration-none">Alliances</a>
                <a href="#" class="text-white text-decoration-none">Profil</a>
            </nav>
        </div>
    </header> #}
    <div class="w3-bar w3-black">
        <a href={{ path('app_home')}} class="w3-bar-item w3-button">Ibei</a>
        <a href="#about" class="w3-bar-item w3-button">About</a>
        <a href="#members" class="w3-bar-item w3-button">Members</a>
        <a href="#contact" class="w3-bar-item w3-button">Contact</a>
    </div>


    {# <div class="clear-flex"></div> #}
    <div class="d-flex flex-column flex-lg-row row full-height-connexion">

       
        <!-- Contenu principal -->
        {# <main class="col-12 col-lg-9 p-4 bg-dark"> #}
        <main class="col-12 pl-4 border-top border-light row d-flex flex-column justify-content-between h-100 align-items-center">
            <div class="text-white w-100">
                <h1 class="text-center">Ibei</h1>
                <p class="text-center">Le jeu par navigateur aux multiples gameplays</p>
            </div>
            {% for label, messages in app.flashes %}
			{% set labelBootstrapClass = {
                'success': 'success',
                'error': 'danger',
                'warning': 'warning',
                'info': 'info'
            }[label]|default('secondary') %}
                {% for message in messages %}
                <div class="alert alert-{{ labelBootstrapClass }} text-center">
                    {{ message }}
                </div>
                {% endfor %}
		    {% endfor %}
            <div class="text-white w-100">
            {% block body %}
                <h1 class="fs-3 fw-bold mb-4 text-warning">Bienvenue, Seigneur des Terres du Nord</h1>

            	<!-- Grille des ressources -->
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                    <!-- Bloc de ressources -->
                    <div class="col">
                        <div class="card bg-secondary text-light">
                            <div class="card-body">
                                <h3 class="card-title mb-2">üí∞ Or</h3>
                                <p class="card-text fs-4">5320</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card bg-secondary text-light">
                            <div class="card-body">
                                <h3 class="card-title mb-2">üåæ Nourriture</h3>
                                <p class="card-text fs-4">2810</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card bg-secondary text-light">
                            <div class="card-body">
                                <h3 class="card-title mb-2">ü™µ Bois</h3>
                                <p class="card-text fs-4">1470</p>
                            </div>
                        </div>
                    </div>
                </div>

            	<!-- Exemple d'action -->
                <div class="mt-4">
                    <button class="btn btn-warning text-dark py-2 px-4 rounded shadow-sm">
                        Collecter les taxes üí∞
                    </button>
                </div>
            {% endblock %}
            </div>
			<footer class="custom-footer text-white text-center w-100">Studio Zensaikeunde</footer>
        </main>
    </div>

    <!-- Scripts JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		{% block script %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<!--	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>  -->

</body>
</html>


 
