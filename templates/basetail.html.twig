

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Royaume de Conquête{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href={{ asset('css/style.css') }}>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
</head>
<body class="bg-gray-900 text-white font-serif">

<!-- Barre du haut -->
{# flex flex-col lg:flex-row #}
<header class="bg-gray-800 shadow-md">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div class="text-2xl font-bold tracking-wide">⚔️ Royaume de Fer</div>
        <nav class="space-x-4">
            <a href="#" class="hover:text-yellow-400">Carte</a>
            <a href="#" class="hover:text-yellow-400">Alliances</a>
            <a href="#" class="hover:text-yellow-400">Profil</a>
        </nav>
    </div>
</header>

<div class="flex">

    <!-- Menu latéral -->
    <aside class="w-64 bg-gray-800 p-5 space-y-4 shadow-lg">
        <h2 class="text-xl font-semibold text-yellow-300 mb-4">📜 Commandement</h2>
        <ul class="space-y-2">
            <li><a href="#" class="block hover:text-yellow-400">🏰 Royaume</a></li>
            <li><a href="#" class="block hover:text-yellow-400">💰 Économie</a></li>
            <li><a href="#" class="block hover:text-yellow-400">⚙️ Améliorations</a></li>
            <li><a href="#" class="block hover:text-yellow-400">🛡️ Armée</a></li>
            <li><a href="#" class="block hover:text-yellow-400">📦 Stock</a></li>
        </ul>
    </aside>

    <!-- Contenu principal -->
    <main class="flex-1 p-8 bg-gray-950">
	{% for label, messages in app.flashes %}
			{% set labelBootstrapClass = {
                'success': 'success',
                'error': 'danger',
                'warning': 'warning',
                'info': 'info'
            }[label]|default('secondary') %}
			{% for message in messages %}
				<div class="alert alert-{{ labelBootstrapClass }} text-center">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
        {% block body %}
        <h1 class="text-3xl font-bold mb-6 text-yellow-400">Bienvenue, Seigneur des Terres du Nord</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <!-- Bloc de ressources -->
            <div class="bg-gray-800 p-4 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold mb-2">💰 Or</h3>
                <p class="text-yellow-400 text-2xl font-mono">5320</p>
            </div>
            <div class="bg-gray-800 p-4 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold mb-2">🌾 Nourriture</h3>
                <p class="text-green-400 text-2xl font-mono">2810</p>
            </div>
            <div class="bg-gray-800 p-4 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold mb-2">🪵 Bois</h3>
                <p class="text-amber-300 text-2xl font-mono">1470</p>
            </div>
        </div>

        <!-- Exemple d'action -->
        <div class="mt-10">
            <button class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded shadow-md">
                Collecter les taxes 💰
            </button>
        </div>
        {% endblock %}
    </main>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		{% block script %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
